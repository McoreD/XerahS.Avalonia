<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="220"
        x:Class="RegionCaptureHost.MainWindow"
        Title="Region Capture Host"
        Width="420"
        Height="220">
  <Border Padding="16">
    <Grid RowDefinitions="Auto,*" RowSpacing="12">
      <StackPanel Spacing="8">
      <TextBlock Text="Region capture smoke test" FontSize="18" FontWeight="SemiBold"/>
      <TextBlock Text="Click the button to open per-monitor capture overlays and select a region." TextWrapping="Wrap"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Top" Grid.Row="1">
        <Button x:Name="StartCaptureButton" Content="Start capture" Width="140" />
        <TextBlock x:Name="StatusText" VerticalAlignment="Center" />
      </StackPanel>
    </Grid>
  </Border>
</Window>
